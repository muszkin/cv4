<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\SkillDescription" table="skill_description">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" precision="0" scale="0"/>

        <many-to-one target-entity="App\Entity\Skill" field="skill" inversed-by="skillDescriptions">
            <join-column on-delete="CASCADE" nullable="false"/>
        </many-to-one>

        <many-to-one target-entity="App\Entity\Language" field="lang">
            <join-column on-delete="CASCADE" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
