<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Duty" table="duty">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>


        <one-to-many target-entity="App\Entity\DutyDescription" mapped-by="duty" field="dutyDescriptions">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="App\Entity\Work" field="work" inversed-by="duties" fetch="LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column nullable="false" on-delete="CASCADE"/>
        </many-to-one>


    </entity>
</doctrine-mapping>
