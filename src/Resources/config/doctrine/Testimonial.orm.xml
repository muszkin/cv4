<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Testimonial" table="testimonial">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" scale="0" precision="0"/>
        <field name="project_url" type="string" column="project_url" scale="0" precision="0" nullable="true"/>

        <one-to-many target-entity="App\Entity\TestimonialDescription" mapped-by="testimonial" field="testimonialDescriptions">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>
